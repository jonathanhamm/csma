
<statement> ->
            <id> <assignment> | <call>

<id> ->
            id <idsuffix>

<assignment> ->
            assignop <expression>

<idsuffix> ->
            . id | ε
    
<expression> ->
            num | string | <id> <optassign> | <aggregate>
    
<optassign> ->
            <assignment> | ε
    
<aggregate> -> 
            { <aggregate_list> }

<aggregate_list> -> 
            <expression> <aggregate_list> | ε

<call> -> 
            funcid (<aggregate_list>)
